<div id="main-content" role="main" itemprop="mainContentOfPage">
		  	<section>
			<div id="page" class="container">
				<div class="page-header">
					<div class="row">
						<div class="col-xs-12 col-md-12">
							<h1 class="blue">Join AAA</h1>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12 col-md-12 sm-marB20">
						<div class="panel panel-default">
	  						<div class="panel-body">
	  							<div class="col-xs-12 col-md-12 sm-marB20">
									<div class="progress">
										<div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100" style="width: 33%;">
										Membership Plans
										</div>
									</div>
								</div>
								<div class="col-xs-12 col-md-12 sm-marB20">
									<%= form_tag(:id => 'join_aaa',controller: "join", action: "create", method: "post") do %>
										<fieldset>

											<% @MembershipTiers.each_with_index do |t, index| %>

												<div class="radio">
													<label>
														<%= radio_button_tag(:tier, t.id) %>

														<div class="row sm-marB20">
															<div class="col-xs-12 col-md-2 xs-marB20">
																<img src="<%= t.membermgmt__image__c %>">
															</div>
															<div class="col-xs-12 col-md-4">
																<span class="planname blue"><%= t.name %> Membership</span>
																<div class="row">
																	<div class="col-xs-8 col-md-8">
																		<p>1st Member:</p>
																	</div>
																	<div class="col-xs-4 col-md-4">
																		<p>$<%= number_with_precision(t.membermgmt__first_member__c, :precision => 0, :delimiter => ',') %></p>
																	</div>
																</div>
																<div class="row">
																	<div class="col-xs-8 col-md-8">
																		<p>1st Additional Member:</p>
																	</div>
																	<div class="col-xs-4 col-md-4 red">
																		<p>First Year $<%= number_with_precision(t.membermgmt__first_additional_member__c, :precision => 0, :delimiter => ',') %></p>
																	</div>
																</div>
																<div class="row">
																	<div class="col-xs-8 col-md-8">
																		<p>Each Additional Member:</p>
																	</div>
																	<div class="col-xs-4 col-md-4">
																		<p>$<%= number_with_precision(t.membermgmt__each_additional_member__c, :precision => 0, :delimiter => ',') %></p>
																	</div>
																</div>
															</div>
															<div class="col-xs-12 col-md-6">
																<div class="panel row<%= index %>">
																<% @MembershipBenefits.each do |b| %>

																<% if b.membermgmt__membership_tier__c == t.sfid %>

																	<p><strong><%= b.name %></strong> - <%= b.membermgmt__description__c %></p>
																	<% 	end %>
																<% 	end %><!--
																	<p><strong>Tire Change</strong> - Change flat tire with an inflated spare</p>
											                        <p><strong>Battery Boost</strong> - Provided in attempt to start vehicle</p>
											                        <p><strong>Towing Service</strong> - Up to 5 miles of free towing</p>
											                        <p><strong>Fuel Delivery</strong> - Actual pump price of gas is charged</p>
											                        <p><strong>Lockout Service</strong> - No charge for services up to $50</p>-->
											                    </div>
															</div>
														</div>
													</label>
												</div>

											<% end %>

											<hr>
											<div class="row">
												<div class="col-xs-12 col-md-6">
													<%= link_to "Back", :back,  :class => "btn btn-default grayBGdark"%>
												</div>
												<div class="col-xs-12 col-md-6 txt-right">
													<%= submit_tag("Continue", :class => "btn btn-default") %>
												</div>
										</fieldset>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		</div> <!-- /main -->

		<script>
        	$(document).ready(function() {
        		$( ".row0" ).addClass( "highlightBlue" );
        		$( ".row1" ).addClass( "highlightGold" );
        		$( ".row2" ).addClass( "highlightGray" );


        	});
  		</script>
